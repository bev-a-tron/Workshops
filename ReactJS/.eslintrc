{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "quotes": [2, "single"],
    "no-use-before-define": [2, "nofunc"],
    "no-mixed-spaces-and-tabs": 2,
    "indent": [2, 2],
    // eslint still doesn't understand when jsx uses a var
    // so disable it for now
    "no-unused-vars": 0,
    "no-console": 2,
    "no-underscore-dangle": 0
  }
}